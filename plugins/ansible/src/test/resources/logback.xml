<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.toscaruntime.ansible.connection.AnsibleConnection" level="DEBUG" />

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>